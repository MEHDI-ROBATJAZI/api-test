html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title PUG VUE NODE JQUERY
        link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css', integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh', crossorigin='anonymous')  	
        script(src="/js/jquery-3.4.1.js")
        script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js', integrity='sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo', crossorigin='anonymous')
        script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js', integrity='sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6', crossorigin='anonymous')
        link(rel="stylesheet",href="https://fonts.googleapis.com/css?family=Montserrat|Montserrat+Alternates|Poppins|Roboto+Mono&display=swap")
        link(rel="stylesheet",href="/css/style.css")
        script(src="/js/vue.js")
    body
        .container
            h1.mb-5 this is test rest api with one example
            .input-group.mb-5(id="form")
                label(for="input") {{editMode ? "please update this task" : "please add new task to json file"}}
                input.form-control(type="text",id="input",v-model="newTodo.text")
                button.btn.btn-primary(v-on:click="addOrUpdate") {{editMode ? 'EDIT MODE' :'INSERT MODE'}}

            

            table.table.table-striped(id="table")
                tbody
                    tr(v-for="todo in todos")
                        td {{todo.text}}
                        td(width=15)
                            img(src="/images/edit.svg",width="30px", v-on:click="beginUpdateTask(todo)")
                        td(width=15)
                            img(src='/images/trash.svg',width="30px", v-on:click="removeTask(todo)")


        script(src="/js/script.js")